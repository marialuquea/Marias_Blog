block content
 h1 Login

 form(method='post', action='/users/login')
  .addpostbox
   label.login Username
   input.login(name='username', type='text', placeholder='Enter username')

  .addpostbox
   label.login Password
   input.login(name='password', type='password', placeholder='Enter password')
  input.save(type='submit', name='submit', value='Login')
